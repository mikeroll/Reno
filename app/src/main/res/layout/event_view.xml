<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardView"
        android:layout_height="match_parent"
        style="@style/MainCardView">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/titleTextView"
                        android:padding="@dimen/big_padding"
                        android:textColor="@color/black_button"
                        android:textSize="@dimen/bigger_title_size"
                        tools:text="This is the title"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/date"
                        android:textColor="@color/description_color"
                        android:padding="@dimen/big_padding"
                        android:textSize="@dimen/description_size"
                        android:layout_below="@+id/titleTextView"
                        android:layout_alignParentStart="true"/>

                <TextView
                        android:id="@+id/artists_header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/description_color"
                        android:padding="@dimen/big_padding"
                        android:textSize="@dimen/description_size"
                        android:textStyle="bold"
                        android:text="Artists"
                        android:layout_below="@+id/date"
                        android:layout_alignParentStart="true"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/descriptionTextView"
                        android:layout_below="@+id/artists_header"
                        android:textColor="@color/description_color"
                        android:padding="@dimen/big_padding"
                        android:textSize="@dimen/description_size"
                        tools:text="And this is the description"/>


                <TextView
                        android:id="@+id/venue_header"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/description_color"
                        android:padding="@dimen/big_padding"
                        android:textSize="@dimen/description_size"
                        android:textStyle="bold"
                        android:text="Venue"
                        android:layout_below="@+id/descriptionTextView"
                        android:layout_alignParentStart="true"/>

                <TextView
                        android:id="@+id/venue_info"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/description_color"
                        android:padding="@dimen/big_padding"
                        android:textSize="@dimen/description_size"
                        tools:text="Venue"
                        android:layout_below="@+id/venue_header"
                        android:layout_alignParentStart="true"/>

                <View
                        android:id="@+id/cardDivider"
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/divider_grey"
                        android:layout_below="@+id/descriptionTextView"
                        android:layout_alignLeft="@+id/titleTextView"
                        android:layout_alignStart="@+id/titleTextView"
                        android:visibility="invisible"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/right_text_button"
                        android:paddingLeft="@dimen/small_padding"
                        android:paddingTop="@dimen/big_padding"
                        android:paddingRight="@dimen/big_padding"
                        android:paddingBottom="@dimen/big_padding"
                        style="@style/RightButtonBaseStyle"
                        android:text="ADD TO CALENDAR"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>
